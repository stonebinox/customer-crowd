<%= form_for(@crowdly, html: { multipart: true }) do |f| %>
	<% if @crowdly.errors.any? %>
		<div class="error">
			<h2>
				<%= pluralize(@crowdly.errors.count, "error") %> prohibited this post from being saved:
			</h2>
			<ul>
				<% @crowdly.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group m-form__group">
      <%= f.text_field :name, autofocus: true, class: "form-control m-input", placeholder: "Full Name", autocomplete: "off" %>
    </div>
    <div class="form-group m-form__group">
      <% if (@crowdly.image) %>
        <img alt="" src="<%= @crowdly.image %>" width="70px"/>
      <% end %>
      <%= f.file_field :image, class: "form-control m-input", placeholder: "Image", autocomplete: "off" %>
    </div>
    <div class="form-group m-form__group">
      <%= f.text_field :bio, class: "form-control m-input", placeholder: "Bio", autocomplete: "off" %>
    </div>
    <div class="form-group m-form__group">
      <%= f.text_field :facebook, class: "form-control m-input", placeholder: "Facebook", autocomplete: "off" %>
      <small>Enter full url including http://www… not just username</small>
    </div>
    <div class="form-group m-form__group">
      <%= f.text_field :twitter, class: "form-control m-input", placeholder: "Twitter", autocomplete: "off" %>
      <small>Enter full url including http://www… not just username</small>
    </div>
    <div class="form-group m-form__group">
      <%= f.text_field :instagram, class: "form-control m-input", placeholder: "Instagram", autocomplete: "off" %>
      <small>Enter full url including http://www… not just username</small>
    </div>
    <div class="form-group m-form__group">
      <%= f.text_field :linkedin, class: "form-control m-input", placeholder: "Linkedin", autocomplete: "off" %>
      <small>Enter full url including http://www… not just username</small>
    </div>
    <div class="form-group m-form__group">
      <%= f.text_area :review, class: "form-control m-input", placeholder: "Review", autocomplete: "off" %>
    </div>
    <div class="m-login__form-action">
      <%= f.submit "Submit crowdly!", id: "m_login_signin_submit", class: "btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" %>
    </div>
<% end %>